<div class="container-fluid d-flex align-items-center justify-content-center min-vh-100">  
  <div class="col-lg-4 col-md-6 col-10 shadow-lg p-4 rounded">
    <h2>Update Your Details</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        <% if resource.errors[:name].present? %>
          <div class="text-danger"><%= resource.errors[:name].first %></div>
        <% end %>
      </div>


      <div class="field">
        <%= f.label :mobile_number %><br />
        <%= f.text_field :mobile_no, autofocus: true, class: 'form-control' %>
        <% if resource.errors[:mobile_no].present? %>
          <div class="text-danger"><%= resource.errors[:mobile_no].first %></div>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        <% if resource.errors[:email].present? %>
          <div class="text-danger"><%= resource.errors[:email].first %></div>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :roles %>
        <%= f.select :role, User.roles.select { |role, _value| ['guest', 'publisher'].include?(role) }.keys, {}, { class: 'form-control' } %>
        <% if resource.errors[:role].present? %>
          <div class="text-danger"><%= resource.errors[:role].first %></div>
        <% end %>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
        <% if resource.errors[:password].present? %>
          <div class="text-danger"><%= resource.errors[:password].first %></div>
        <% end %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: 'form-control'%>
        <% if resource.errors[:password_confirmation].present? %>
          <div class="text-danger"><%= resource.errors[:password_confirmation].first %></div>
        <% end %>
      </div>
    
      <div class="field">
        <%= f.label :current_password %><br />
        <%= f.password_field :current_password, autofocus: true, autocomplete: "current-password", class: 'form-control'  %>
        <% if resource.errors[:current_password].present? %>
          <div class="text-danger"><%= resource.errors[:current_password].first %></div>
        <% end %>
      </div>

      <div class="actions text-white mt-2" style="display: flex; justify-content: center;">
        <%= f.submit "Update", class: "btn btn-outline-02 me-2" %>
      </div>
    <% end %>
    
    <div class="actions text-white mt-2" style="display: flex; justify-content: center;">
     <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure, You want to Delete your Account?", turbo_confirm: "Are you sure, You want to Delete your Account?" }, method: :delete, class: "btn btn-outline-02 me-2" %>
    </div>
    
    <%= link_to "Back", :back %>
  </div>
</div>