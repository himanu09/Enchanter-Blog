
<%= turbo_frame_tag "flash" do %>
  <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible fade show mx-auto text-center" role="alert" style="max-width: 500px; padding-top: 10px; margin-bottom: 2rem; margin-top: 2rem;">
      <%= flash[:notice] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
  
  <% if flash[:alert] %>
    <div class="alert alert-danger alert-dismissible fade show mx-auto text-center" role="alert" style="max-width: 500px; padding-top: 10px margin-bottom: 2rem; margin-top: 2rem;">
      <%= flash[:alert] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
<% end %>

